@model WebsiteShopQuanAo.Models.CheckoutVM
@{
    ViewBag.Title = "Checkout";
    var cart = (Dictionary<string, WebsiteShopQuanAo.Models.CTGioHang>)Session["Cart"];
}

.payment-method {
    margin-top: 10px;
}

.payment-item {
    display: flex;
    align-items: center;
    gap: 6px;
    margin-bottom: 6px;
    font-weight: normal;
}

.payment-radio {
    width: 14px !important;
    height: 14px !important;
    margin: 0;
}


<!--breadcrumbs area start-->
<div class="breadcrumbs_area breadcrumbs_other">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content text-center">
                    <ul>
                        <li><a href="@Url.Action("Index","Home")">home</a></li>
                        <li>checkout</li>
                    </ul>
                    <h3>checkout</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<!--breadcrumbs area end-->
<!--Checkout page section-->
<div class="checkout_section" id="accordion">
    <div class="container">

        <!-- ================= BILLING + ORDER ================= -->
        @using (Html.BeginForm("PlaceOrder", "Cart", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="checkout_form">
                <div class="row">

                    <!-- ================= LEFT : BILLING ================= -->
                    <div class="col-lg-7 col-md-6">
                        <h3>Billing Details</h3>

                        @Html.HiddenFor(x => x.TongTien)
                        @Html.HiddenFor(x => x.TongSoLuong)

                        <div class="checkout_form_input">
                            <label>Địa chỉ giao hàng <span>*</span></label>
                            @Html.TextBoxFor(x => x.DiaChiGiao,
                                new { @class = "form-control", required = "required" })
                        </div>

                        <div class="checkout_form_input">
                            <label>Hình thức thanh toán <span>*</span></label>

                            <div class="payment-method">
                                <label class="payment-item">
                                    @Html.RadioButtonFor(x => x.HinhThucThanhToan, "COD", new { @class = "payment-radio" })
                                    <span>Thanh toán khi nhận hàng (COD)</span>
                                </label>

                                <label class="payment-item">
                                    @Html.RadioButtonFor(x => x.HinhThucThanhToan, "BANK", new { @class = "payment-radio" })
                                    <span>Chuyển khoản ngân hàng</span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- ================= RIGHT : ORDER ================= -->
                    <div class="col-lg-5 col-md-6">
                        <div class="order_table_right">
                            <h3>Your order</h3>

                            <div class="order_table table-responsive">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th class="text-right">Total</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var ctsp in Model.CTSPs)
                                        {
                                            var item = cart[ctsp.MACTSP];
                                            <tr>
                                                <td>
                                                    <b>@ctsp.SAN_PHAM.TENSP</b><br />
                                                    Màu: @ctsp.MAU_SAC.TENMAU |
                                                    Size: @ctsp.KICH_THUOC.TENSIZE<br />
                                                    SL: @item.SoLuong
                                                </td>
                                                <td class="text-right">
                                                    @((item.SoLuong * item.Gia).ToString("N0"))₫
                                                </td>
                                            </tr>
                                        }
                                    </tbody>

                                    <tfoot>
                                        <tr>
                                            <td>Tổng số lượng</td>
                                            <td class="text-right">@Model.TongSoLuong</td>
                                        </tr>
                                        <tr class="order_total">
                                            <th>Tổng tiền</th>
                                            <td class="text-right">
                                                @Model.TongTien.ToString("N0") ₫
                                            </td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>

                            <div class="place_order_btn">
                                <button type="submit" class="btn btn-primary w-100">
                                    PLACE ORDER
                                </button>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        }
        <!-- ================= END FORM ================= -->

    </div>
</div>
<!--Checkout page section end-->
