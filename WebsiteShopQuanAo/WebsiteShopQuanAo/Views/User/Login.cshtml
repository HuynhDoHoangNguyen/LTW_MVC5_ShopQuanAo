@model WebsiteShopQuanAo.Models.TAI_KHOAN

@{
    ViewBag.Title = "Login";
}

<div class="checkout_section mt-60">
    <div class="container" style="margin-top:100px">
        <div class="row">
            <div class="col-lg-6 col-md-8 offset-lg-3 offset-md-2">
                <div class="checkout_info">
                    <h3 class="text-center mb-30">Account Login</h3>
                    <p class="text-center mb-40">
                        If you already have an account, please login below.<br />
                        Don't have an account? <a href="@Url.Action("Register", "User")">Need an account? Sign up!</a>
                    </p>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger text-center mb-30">
                            @ViewBag.Error
                        </div>
                    }

                    @using (Html.BeginForm("Login", "User", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form_group">
                            <label>Tên đăng nhập <span>*</span></label>
                            <input class="form-control" id="inputEmail" type="text" placeholder="username" required name="username" />
                        </div>

                        <div class="form_group">
                            <label>Mật khẩu <span>*</span></label>
                            <input class="form-control" id="inputPassword" type="password" placeholder="Password" required name="matkhau" />
                        </div>

                        <div class="form_group group_3 d-flex justify-content-between align-items-center">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>






