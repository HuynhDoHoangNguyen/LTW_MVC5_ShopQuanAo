
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="customer_login" style="padding-top: 180px; padding-bottom: 100px;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="account_form">
                    <h2 class="text-center">Đăng nhập</h2>
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <p>
                            <label>Tên đăng nhập <span>*</span></label>
                            <input type="text" name="USERNAME" required>
                        </p>
                        <p>
                            <label>Mật khẩu <span>*</span></label>
                            <input type="password" name="MATKHAU" required>
                        </p>

                        <div class="login_submit">
                            <button type="submit">Đăng nhập</button>
                            <a href="#" class="float-right mt-2">Quên mật khẩu?</a>
                        </div>

                        <span>@ViewBag.Error</span>

                        <div class="mt-4 pt-3 border-top text-center">
                            <span class="text-muted">Bạn là khách hàng mới?</span>
                            <br />
                            <a href="@Url.Action("Register", "Home")" class="d-inline-block mt-2" style="color: #ff6a28; text-decoration: underline; font-weight: bold;">
                                Tạo tài khoản mới
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
